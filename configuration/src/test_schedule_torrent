from model_utils import host
from schedule_utils import at

add_resource('torrent', 'test-file-1gb.torrent')

host('alice').use_resource('torrent')
host('alice').use_resource('torrent')

on('alice').schedule('ctorrent', at(0), 'ctorrent @{torrent.filename}')
on('bob').schedule('ctorrent', at(0), 'ctorrent @{torrent.filename}')

