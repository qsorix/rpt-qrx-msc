from utils.model import get_host
from utils.schedule import at
from utils.resources import File

add_resource(File('torrent', 'test-file-1gb.torrent'))

get_host('alice').use_resource('torrent')
get_host('bob').use_resource('torrent')

on('alice').schedule('ctorrent', at(0), 'ctorrent @{torrent.path}')
on('bob').schedule('ctorrent', at(0), 'ctorrent @{torrent.path}')

