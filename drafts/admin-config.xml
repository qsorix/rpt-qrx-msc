<configuration>

  <hosts>
    <host id="A">
      <ip>192.168.6.2</ip>
    </host>

    <host id="B">
      <name>marvin</name>
    </host>
  </hosts>

  <test>
    <duration unit="s">15</duration>

    <resource id="torrent-file">
      <file>/local/path/plik.torrent</file>
    </resource>

    <schedule id="torrent-test">
      <action id="torrent">
        <at unit="s">0</at>
        <command>ctorrent {%torrent-file%} -e 0</command>
      </action>
 
      <action>
        <at unit="s">10</at>
        <kill id="torrent"/>
      </action>
    </schedule>

    <setup for="A">
      <resource id="torrent-file"/>
      <schedule id="torrent-test"/>
    </setup>

    <setup for="B">
      <resource id="torrent-file"/>
      <schedule id="torrent-test"/>
    </setup>
  </test>

</configuration>
